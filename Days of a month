#include <stdio.h>
int main(){
	int month, days;
	printf("Enter month number: ");
	scanf("%d", &month);
	switch(month){
		case 1:
		case 3:
		case 5:
		case 7:
		case 8:
		case 10:
		case 12:
			days=31;
			break;
		case 4:
		case 6:
		case 9:
		case 11:
			days=30;
			break;
		case 2:
			days=28;
			break;
		default:
			days=32;
			break;
	}
	if(days==32){
		printf("Invalid month number\n");
	} else if(days==28){
		printf("28 or 29 days\n");
	} else if(days == 30){
		printf("30 days\n");
	} else {
		printf("31 days\n");
	}	
}

